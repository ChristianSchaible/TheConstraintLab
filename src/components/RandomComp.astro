---
const compositionTips = [
  { term: "Dense", desc: "Fill the frame with elements to create a heavy visual weight." },
  { term: "Symmetrical", desc: "Balance elements evenly for harmony and stability." },
  { term: "Minimal", desc: "Use only essential elements; embrace empty space." },
  { term: "Layered", desc: "Include foreground, middle ground, and background for depth." },
  { term: "Leading Lines", desc: "Guide the viewer's eye through the composition naturally." },
  { term: "Framing", desc: "Use objects to frame the subject and focus attention." },
  { term: "Contrast", desc: "Use light, color, or shape differences to make elements pop." },
  { term: "Pattern", desc: "Incorporate repeating elements to create rhythm and interest." },
  { term: "Perspective", desc: "Experiment with angles to add drama or scale." },
  { term: "Negative Space", desc: "Give your subject room to breathe for clarity and focus." }
];

const randomTip = compositionTips[Math.floor(Math.random() * compositionTips.length)];
---

<div class="compositiontip" >
  <p>Composition:</p>
  <p class="tip">{randomTip.term}.</p>
  <span id="composition-desc" class="desc">{randomTip.desc}</span>
</div>

<style>
.compositiontip {
  padding: 1rem;
  border: 2px solid var(--color-accent);
  width: 30rem;
  height: fit-content;
  display: flex;
  flex-direction: column; 
  color: blue;
  border-radius: 20px;

}
.compositiontip .tip {
  font-size: 2rem;
  font-weight: bold;
  transition: all 0.3s linear(0, -0.001 1.4%, -0.005 2.9%, -0.02 6.1%, -0.042 9.3%, -0.107 17.7%, -0.123 20.2%, -0.132 22.4%, -0.138 24.9%, -0.135 27.3%, -0.126 29.5%, -0.108 31.7%, -0.092 33.1%, -0.074 34.4%, -0.025 37%, 0.037 39.5%, 0.116 42%, 0.204 44.3%, 0.305 46.5%, 0.411 48.5%, 0.644 52.5%, 0.733 54.3%, 0.812 56.1%, 0.895 58.3%, 0.966 60.6%, 1.023 62.9%, 1.069 65.3%, 1.103 67.8%, 1.116 69.1%, 1.126 70.5%, 1.133 71.9%, 1.137 73.3%, 1.138 74.8%, 1.136 76.3%, 1.127 78.9%, 1.111 81.7%, 1.091 84.5%, 1.04 91%, 1.018 94.2%, 1.005 97.2%, 1.001 98.6%, 1);
}

